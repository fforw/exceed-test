{
    "startTransition": {
        "to": "list"
    },
    "context": {
        "properties": {
            "orderItems" : {
                "type" : "List",
                "typeParam" : "OrderItem"
            },
            "newStatus" : {
                "type" : "State",
                "typeParam" : "OrderStatus"
            }
        }
    },
    "states": {
        "list": {
            "type": "xcd.process.ViewState",
            "transitions": {
                "takeOrder": {
                    "to": "newOrder",
                    "action": "current = newObject('Order'); current.number = newOrderNumber(); orderItems=[]"
                },
                "detail": {
                    "to": "detail",
                    "action": "current = merge(current); orderItems = query( OrderItem.as(oi) ).filter( oi.orderId == current.id)"
                }
            }
        },
        "newOrder": {
            "type": "xcd.process.ViewState",
            "transitions": {
                "save": {
                    "action": "shopTakeOrder(current)",
                    "to": "list"
                },
                "cancel": {
                    "to": "list",
                    "discard": true
                }
            }
        },
        "detail": {
            "type": "xcd.process.ViewState",
            "transitions": {
                "back": {
                    "to": "list",
                    "discard": true
                },
                "changeStatus": {
                    "action": "store(current)",
                    "to": "detail"
                }
            }
        }
    }
}
